@page
@model Book_List.Pages.BookList.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-10">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-2">
        <a asp-page="Create" class="btn btn-info form-check-control text-white">Create New Book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Title)
                            @*<lable asp-for="Books.FirstOrDefault().Title"></lable> --NOT WORKING--*@
                        </th>
                        <th>
                            @*<lable asp-for="Books.FirstOrDefault().Author"></lable> --NOT WORKING--*@
                            @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Books.FirstOrDefault().ISBN)
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.Books)
                    { 
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.ISBN)
                            </td>

                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you want sure that you wnat delete this book?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                            
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No books available</p>
            }

        </form>
    </div>

</div>